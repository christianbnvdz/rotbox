{
  "include": ["../src/**/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "../src/",
    "outDir": "../build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  }
}
